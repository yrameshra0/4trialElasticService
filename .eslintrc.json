{
  "env": {
    "jest": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "prettier"
  ],
  "extends": [
    "airbnb",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "spread": true
    },
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "max-len": [
        "error",
        {
          "code": 180
        }
      ]
    }
  }
}